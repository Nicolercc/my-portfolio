---
type Props = {
    timePeriod: string;
    projectName: string;
    projectDescription: string;
    skills?: Array<string>;
    image: string;
}

const {
    timePeriod,
    projectName,
    projectDescription,
    skills,
    image
} = Astro.props;
---

<div class="grid grid-cols-2 gap-4 items-center hover:bg-slate-800/50 py-2 px-4 rounded-lg drop-shadow-2xl">
    <img src={image} alt={projectName} class="w-16 h-16 rounded-full object-cover" />
    <header class="text-slate-400 ">{timePeriod}</header>
    <div class="col-span-3 grid gap-y-1">
        <p class="text-slate-200 font-semibold">{projectName}</p>
        <p class="text-slate-400">
            {projectDescription}
        </p>
    </div>
</div>
<div class="flex flex-wrap gap-2 mt-2">
    {skills?.map((s) => (
        <div class="bg-teal-400/20 py-1 px-2 rounded-full text-teal-300 text-sm">{s}</div>
    ))}
</div>
